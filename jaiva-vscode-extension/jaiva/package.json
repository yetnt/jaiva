{
    "name": "jaiva",
    "displayName": "Jaiva Coloring",
    "description": "Colouring for jaiva code. If you use lol",
    "version": "1.0.0-beta.2",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/yetnt/jaiva"
    },
    "contributes": {
        "languages": [
            {
                "id": "jaiva",
                "aliases": [
                    "Jaiva!",
                    "Jaiva",
                    "jaiva"
                ],
                "extensions": [
                    ".jva",
                    ".jiv",
                    ".jaiva"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jaiva",
                "scopeName": "source.jaiva",
                "path": "./syntaxes/jaiva.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "jaiva.run",
                "title": "Run Jaiva File"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Jaiva Configuration",
            "properties": {
                "jaiva.runArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Additional arguments to pass when running Jaiva filez"
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "jaiva.run",
                    "when": "editorLangId == jaiva",
                    "group": "navigation"
                }
            ]
        }
    },
    "main": "./dist/extension.js",
    "devDependencies": {
        "@types/node": "^22.14.1",
        "@types/vscode": "^1.99.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "vscode": "^1.1.37"
    }
}
