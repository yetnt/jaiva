{
    "name": "jaiva",
    "displayName": "Jaiva Coloring",
    "description": "Colouring for jaiva code. If you use lol",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "themes": [
            {
                "label": "My Custom Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/jaiva-color-theme.json"
            }
        ],
        "languages": [
            {
                "id": "jaiva",
                "aliases": [
                    "Jaiva!",
                    "jaiva"
                ],
                "extensions": [
                    ".jva",
                    ".jiv",
                    ".jaiva"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "iconThemes": [
            {
                "id": "jaiva-icons",
                "label": "Jaiva Icons",
                "path": "./file-icons/jaiva-icon-theme.json"
            }
        ],
        "grammars": [
            {
                "language": "jaiva",
                "scopeName": "source.jaiva",
                "path": "./syntaxes/jaiva.tmLanguage.json"
            }
        ]
    }
}
