{
    "name": "My Custom Theme",
    "type": "dark",
    "colors": {
        "editor.foreground": "#ffffff",
        "editor.background": "#1e1e1e"
    },
    "tokenColors": [
        {
            "scope": [
                "keyword.control.jaiva"
            ],
            "settings": {
                "foreground": "#6a6fc8"  // Red for keywords
            }
        },
        {
            "scope": [
                "variable.other.jaiva"
            ],
            "settings": {
                "foreground":  "#00ffee" // Green for variables
            }
        },
        {
            "scope": [
                "string.quoted.double.jaiva"
            ],
            "settings": {
                "foreground": "#d1c93a"  // Tomato color for strings
            }
        },
        {
            "scope": [
                "comment.line.jaiva",
                "comment.block.jaiva"
            ],
            "settings": {
                "foreground": "#a07e7e"  // Gray for comments
            }
        },
        {
            "scope": [
                "keyword.operator.comparison.jaiva"
            ],
            "settings": {
                "foreground": "#ffbebe"  // Blue for comparison operators
            }
        },
        {
            "scope": [
                "entity.name.function.jaiva"
            ],
            "settings": {
                "foreground": "#df7ad2"  // Blue for functions
            }
        },
        {
            "scope": [
                "keyword.operator.jaiva"
            ],
            "settings": {
                "foreground": "#dfa11a"  // Blue for operators
            }
        },
        
        {
            "scope": [
                "keyword.operator.end.jaiva"
            ],
            "settings": {
                "foreground": "#ff0000"  // Blue for operators
            }
        },
        {
            "scope": [
                "constant.numeric.jaiva"
            ],
            "settings": {
                "foreground": "#8958fc"  // Blue for operators
            }
        }
    ]
}
